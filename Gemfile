###
# Dependencies (run "bundle update" after changing anything here)
###


# Tell bundler where to get the gems
source "https://rubygems.org"

# Specific Middleman version to prevent differing versions between systems
gem "middleman", "~> 3.1.2"
gem "middleman-blog", "~> 3.2.0"

# Live-reload functionality
# See https://github.com/middleman/middleman-livereload
gem "middleman-livereload"

# RedCarpet as a Markdown parser
gem "redcarpet"

# Deploy Middleman site to Github Pages.
gem "middleman-gh-pages"